<p id="notice"><%= notice %></p>

<% content_for(:pagetitle) do %>
  Tasks
<% end %>

<table class="table table-bordered table-striped table-hover">
  <thead>
    <tr>
      <th>Label</th>
      <th>Category</th>
      <th>Due date</th>
      <th>Completion date</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.label %></td>
        <td><%= task.category_id %></td>
        <td><%= task.due_date %></td>
        <td><%= task.completion_date %></td>
        <td class="text-center"><%= link_to 'Show', task, :class => "btn btn-info" %></td>
        <td class="text-center"><%= link_to 'Edit', edit_task_path(task), :class => "btn btn-warning" %></td>
        <td class="text-center"><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Task', new_task_path, :class => "btn btn-lg btn-primary" %>
