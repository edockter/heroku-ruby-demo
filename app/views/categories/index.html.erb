<p id="notice"><%= notice %></p>

<% content_for(:pagetitle) do %>
  Categories
<% end %>

<table class="table table-bordered table-striped table-hover">
  <thead>
    <tr>
      <th>Label</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.label %></td>
        <td class="text-center"><%= link_to 'Show', category, :class => "btn btn-info" %></td>
        <td class="text-center"><%= link_to 'Edit', edit_category_path(category), :class => "btn btn-warning" %></td>
        <td class="text-center"><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Category', new_category_path, :class => "btn btn-lg btn-primary" %>
