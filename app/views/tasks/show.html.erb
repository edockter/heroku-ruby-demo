<p id="notice"><%= notice %></p>

  <% content_for(:pagetitle) do %>
    "<%= @task.label %>" Details
  <% end %>

  <% content_for(:pagebuttons) do %>
      <div class="btn-group" style="margin-left: 2%; margin-bottom: 1%;">
          <%= link_to 'Edit', edit_task_path(@task), :class => "btn btn-sm btn-info" %>
          <%= link_to 'Back', tasks_path, :class => "btn btn-sm btn-warning" %>
      </div>
  <% end %>

<p>
  <strong>Label:</strong>
  <%= @task.label %>
</p>

<p>
  <strong>Category:</strong>
  <%= @task.category_id %>
</p>

<p>
  <strong>Due date:</strong>
  <%= @task.due_date %>
</p>

<p>
  <strong>Completion date:</strong>
  <%= @task.completion_date %>
</p>

<br/>
